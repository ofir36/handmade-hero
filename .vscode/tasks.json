{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "windows": {
        "command": "${workspaceFolder}/code/build.bat",
        "options": {
          "cwd": "${workspaceFolder}/code"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
      },
      "problemMatcher": []
    }
  ]
}
